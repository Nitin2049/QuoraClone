<% layout('layouts/boilerplate') %>

  <body>

    <!-- ///////////////////////////// -->
   <div id="container">
    <div class="card-container">
      <div class="container">
        <div class="ball-1"></div>
        <div class="ball-2"></div>
        <div class="ball-3"></div>
  
        <div class="box">
          <div class="contains">
            <div class="section-1" style="margin-top: -24px;">
    <div class="mb-3 ms-3 me-3 mt-4">
      <ul class="mt-3">
        <div class="card-header">
        <li><span>Post id:</span> <%= post._id %></li>
        <li><span>Creator: </span> <i> <%= post.creator %></i></li>
        
    </div>

        <li style="color: rgb(239 166 71)">
          <span>Question:</span> <i> <%= post.question %></i>
        </li>

        <div class="msg">
          <li class="msgIn">
            <span> Answer:</span>
            <%= post.answer %>
          </li>

          <div class="btns mt-4 mb-3">
            <form action="/posts/<%= post._id %>/edit" method="get">
              <button class="btn btn-outline-primary me-4">Edit</button>
            </form>

            <form action="/posts/<%= post._id %>?_method=DELETE" method="post">
              <button class="deletetbtn btn btn-outline-danger">Delete</button>
            </form>
          </div>
        </div>

        <li>
          <span>Created at:</span> <%=post.created_at.toString().split(" ")[4]
          %>
        </li>
        <li>
          <%=post.created_at.toString().split(" ").slice(0,4).join("-") %>
        </li>
        <br />

        <li><span>Modified at:</span> <%=post.updated_at %></li>
      </ul>
    </div>
<!-- ///////////// -->
</div>
</div>
</div>
</div>
</div>
    
   </div>
  </body>

